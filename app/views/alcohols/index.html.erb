<div class="page-header">
  <h1>
    Alcohols
    <a href="/alcohols/new" class="btn btn-lg btn-success">New Alcohol</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Origin</th>
        <th>Taste</th>
        <th>Price</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @alcohols.each do |alcohol| %>
      <tr>
        <td><%= alcohol.name %></td>
        <td><%= alcohol.category %></td>
        <td><%= alcohol.origin %></td>
        <td><%= alcohol.taste %></td>
        <td><%= alcohol.price %></td>
        <td><img src='<%= alcohol.image %>' class='img-responsive'></td>
        <td>
          <a href="/alcohols/<%= alcohol.id %>" class="btn btn-primary">Show</a>
          <a href="/alcohols/<%= alcohol.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_alcohol/<%= alcohol.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
