<div class="page-header">
  <h3>Pairing #<%= @pairing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cigar</dt>
      <dd>
        <% if @pairing.cigar.present? %>
          <a href="/cigars/<%= @pairing.cigar_id %>">
            <%= @pairing.cigar.name %>
          </a>
        <% end %>
      </dd>

      <dt>Alcohol</dt>
      <dd>
        <% if @pairing.alcohol.present? %>
          <a href="/alcohols/<%= @pairing.alcohol_id %>">
            <%= @pairing.alcohol.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @pairing.user.present? %>
          <a href="/users/<%= @pairing.user_id %>">
            <%= @pairing.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pairings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @pairing.user %>
        <a href="/pairings/<%= @pairing.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_pairing/<%= @pairing.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
