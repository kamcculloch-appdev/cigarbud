<div class="page-header">
  <h3>Pairing #<%= @pairing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cigar</dt>
      <dd><%= @pairing.cigar_id %></dd>

      <dt>Alcohol</dt>
      <dd><%= @pairing.alcohol_id %></dd>

      <dt>User</dt>
      <dd><%= @pairing.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pairings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @pairing.user %>
        <a href="/pairings/<%= @pairing.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_pairing/<%= @pairing.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
